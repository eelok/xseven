    {{#*inline "content"}}   
        <div class="text-box text-box__reply u-margin-left-medium">
                <div class="reply__greeting u-margin-bottom-medium">
                    Dear, <strong>{{ data.name }}</strong>
                </div>

                <div class="reply__body u-margin-bottom-medium">
                    Thank you for getting in touch!<br>
                    I will prely to you at
                    <strong>{{ data.email }}</strong>
                </div> 
                <div class="reply__signature">
                    Best regards,<br>
                    Mariia.
                </div>
        </div>     
    {{/inline}}
{{/layout}}